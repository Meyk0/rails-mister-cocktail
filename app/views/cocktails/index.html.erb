<h1 class="text-center">Welcome to the Cocktail overview:</p>

<p>This is a list of your cocktails</p>

<div class="container">
  <div class="card-index">
    <% @cocktails.each do|cocktail| %>
      <div class="demo-card-square-index mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text"><%= cocktail.name %></h2>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            <div class="cocktail-overview">
                <%= link_to cocktail.name, cocktail_path(cocktail) %>
              </div>
        </div>
          </a>
      </div>
    <%end%>
  </div>
</div>

