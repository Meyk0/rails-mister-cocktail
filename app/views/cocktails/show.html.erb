<div class="container">
  <div class="banner-show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @cocktail.photo_url %>');">
    <div class="banner-content">
      <h1><%= @cocktail.name %></h1>
      <div class="mdl-card__supporting-text">
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.ingredient.name %> : <%= dose.description %>
            <%= link_to  dose_path(dose), method: :delete do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
          </li>
        <% end %>
      </div>
    </div>
  </div>

  <div class="show-container">
    <div class="form-ingredient">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description, placeholder: "amount", label: "Amount" %>
        <%= f.association :ingredient %>
          <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored">
          <i class="material-icons">add</i>
          </button>
      <% end %>
    </div>

    <div class="demo-card-square mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">Find more drinks including the ingredients below</h2>
      </div>
        <div class="mdl-card__supporting-text">
          <% @cocktail.doses.each do |dose| %>
              <li><%= link_to dose.ingredient.name, ingredient_path(dose.ingredient) %>
              </li>
          <% end %>
        </div>
    </div>
  </div>
</div>


